<div class="form-horizontal mt-5" role="form" >
  <%= form_for(@story) do |form| %>
  <% if story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field offset-1 pr-5">
    <%= form.label :投稿タイトル %>
    <%= form.text_field :title, :class => 'form-control' %>
  </div>

  <div class="field offset-1 mt-4 pr-5">
    <%= form.label :会社名 %>
    <%= form.text_field :company_name, :class => 'form-control' %>
  </div>

  <div class="field offset-1 mt-4 pr-5">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  
  <div class="field offset-1 pr-5">
    <%= form.label :メールアドレス %>
    <%= form.text_field :email, :class => 'form-control' %>
  </div>
  
  <div class="field offset-1 pr-5">
    <%= form.label :連絡先電話番号 %>
    <%= form.text_field :telephone, :class => 'form-control' %>
  </div>
  
  <div class="field offset-1 pr-5">
    <%= form.label :職種 %>
    <%= form.select :ocuppations, ['農業','漁業','林業','工芸','飲食','テーマパーク','エンタメ','工業','メディア'],
    { include_blank: '選択してください' }, :class => 'form-control' %>
  </div>

  <div class="field offset-1 mt-4 pr-5">
    <%= form.label :何をしているか %>
    <%= form.text_area :what, :class => 'form-control' %>
  </div>

  <div class="field offset-1 mt-4 pr-5">
    <%= form.label :やりがい %>
    <%= form.text_area :glad, :class => 'form-control' %>
  </div>

  <div class="field offset-1 mt-4 pr-5">
    <%= form.label :してほしいこと %>
    <%= form.text_area :please, :class => 'form-control' %>
  </div>

  <div class="field offset-1 mt-4 pr-5">
    <%= form.label :募集年齢 %>
    <%= form.text_field :age, :class => 'form-control' %>
  </div>

  <div class="field offset-1 mt-4 pr-5">
    <%= form.label :募集している人柄 %>
    <%= form.text_area :human, :class => 'form-control' %>
  </div>

  <div class="field offset-1 mt-4 pr-5">
    <%= form.label :work %>
    <%= form.text_area :work, :class => 'form-control' %>
  </div>

  <div class="field offset-1 mt-4 pr-5">
    <%= form.label :開始募集期間 %>
    <%= form.date_select :day, :class => 'form-control' %>
  </div>
  
   <div class="field offset-1 mt-4 pr-5">
    <%= form.label :終了募集期間 %>
    <%= form.date_select :dayend, :class => 'form-control' %>
  </div>

  <div class="field offset-1 mt-4 pr-5">
    <%= form.label :備考 %>
    <%= form.text_area :memo, :class => 'form-control' %>
  </div>

  <div class="field offset-1 mt-4 pr-5">
    <%= form.label :お礼の品 %>
    <%= form.text_area :present, :class => 'form-control' %>
  </div>

  <div class="field offset-1 mt-4 pr-5">
    <%= form.label :住所 %>
    <%= form.text_area :address, :class => 'form-control' %>
  </div>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <div class="actions offset-1 mt-5">
    <%= form.submit "登録する", :class => 'btn btn-primary' %>
  </div>
<% end %>
