<div class="container">       

  <h2 class="mt-4">カルーセルの作成</h2>

  <div class="carousel slide" id="c1" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#c1" data-slide-to="0" class="active"></li>
      <li data-target="#c1" data-slide-to="1"></li>
      <li data-target="#c1" data-slide-to="2"></li>
      <li data-target="#c1" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active"><img src="img/photo1.jpg" class="d-block w-100"></div>
      <div class="carousel-item"><img src="/nougyou.jpg" class="d-block w-100"></div>
      <div class="carousel-item"><img src="/kougei.jpg" class="d-block w-100"></div>
      <div class="carousel-item"><img src="/iruka.jpg" class="d-block w-100"></div>
    </div>
    <a href="#c1" class="carousel-control-prev" data-slide="prev">
      <span class="carousel-control-prev-icon"></span>
      <span class="sr-only">前の画像へ</span>
    </a>
    <a href="#c1" class="carousel-control-next" data-slide="next">
      <span class="carousel-control-next-icon"></span>
      <span class="sr-only">次の画像へ</span>
    </a>
  </div>

</div>  
<div class= "container">
  <div class="row">
    <div class="col-4">
      検索条件<br>
      
      <form class="form-inline ml-auto">
          <label class="sr-only" for="kw">検索キーワード</label>
          <input type="search" class="form-control form-control-sm mr-sm-2 my-2 my-md-0" placeholder="キーワード" id="kw">
          <button type="submit" class="btn btn-warning btn-sm my-2 my-md-0">検索</button>
        </form></div>
    <div class="col-8">
      <table>
      <% @stories.each do |story| %>
        <tr><td><%= image_tag story.image.to_s %></td></tr>
          <tr><td><p class=" display-4 "><%= story.title %></p></td></tr>
          <tr><td><%= story.company_name %></td></tr>
          <tr><td><%= story.what %></td></tr>
          <tr><td> Posted <%= time_ago_in_words(story.created_at) %> ago.</td></tr>
          <td><%= link_to '詳細を見る', story %></td>
      <% end %>
    </tbody>
  </table>
  </div>
  </div>
  </div>

